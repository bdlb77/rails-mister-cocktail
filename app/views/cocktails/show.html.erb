

<div class="container">
	<h1><%= @cocktail.name %></h1>

	<h3>List of Doses in cocktail</h3>
	<ul>
		<% @cocktail.doses.each do |dose| %>
    <li>
      <%= "#{dose.description} of #{dose.ingredient.name}"%>
      <%= link_to "delete", dose_path(dose), method: :delete %>
    </li>
    <% end %>
  </ul>

  <%= link_to 'Add a dose!', new_cocktail_dose_path(@cocktail) %>
</div>	